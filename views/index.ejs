<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <link href="/css/bootstrap.min.css"  rel="stylesheet">
    <link href="/static/style.css" rel="stylesheet">
    <title> <%= titulo %>  </title>

  </head>
  <body>
    <div class="header">
      <div class="logo">
        <div class="header__back">
          <i class="fas fa-angle-left"></i>
        </div>
        <%- include("template/navbar") %>  
      </div>
    </div>  
    <div class="main">  
    <div class="main__left">
      <div class="Foro">
          <H1> Foro de Consultas</H1>
      </div>
      <div class="container">
            <table class="table">
              <tbody>
                <% if (arrayForos.length > 0) { %>
                  
                    <tr>
                      <th scope="col">NÂ° de Foro</th>
                      <th scope="col">Titulo</th>
                      <th scope="col">Autor</th>
 
                    </tr>
                  
                  <% arrayForos.forEach(foro => { %>
                    
                    <tr>
     
                      <td scope="row">                 
                        <a href="/foro/<%=foro._id %>">
                          <%=foro._id %> 
                        </a> 
                      </th>
                      <td><%=foro.titulo %> </td>
                      <td><%=foro.autor %> </td> 
                    </tr>
                    <% }) %>
                 <%} else { %>
               
                    <td align="center">Aun no creas tu primero foro, que esperas!.</td>
               
                  
                <% } %>
              </tbody>
            </table>
      </div>
      <div class="d-grid gap-2 col-6 mx-auto">
        <button
            class="btn btn-primary"
            type="submit"
            id="crearf"
          >
            Crear un nuevo foro
          </button>
      </div>
      <div class="crearforo" id="crearforo1">
        <h3 align="center">Crear Foro</h3>
        <form action="/" method="POST">
          <div class="d-grid gap-2 col-6 mx-auto">

          <input
            type="text"
            placeholder="Titulo del Foro..."
            class="form-control my-2"
            name="titulo"
          >
          <input
           type="text"
           placeholder="creador..."
           class="form-control my-2"
           name="autor"
           <!--readonly--> 
          
          <!--<input
          type="date"
          placeholder="fecha..."
          class="form-control my-2"
          name="fecha"
          value= "<%=Date.now() %> "
         >--> 
         
  
          <textarea
            placeholder="Descripcion del Foro...."
            class="form-control my-2"
            rows="3"
            name="descripcion"
          ></textarea>
        
            <button
              class="btn btn-primary"
              type="submit"
            >
              Agregar foro
            </button>
        </div>
        
        </button>
        </form>
      </div>

     </div>
    <div class="main__right">
      <div class="main__chat_window">
          <div class="messages">

          </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Chat en vivo :D...">
        <div id="send" class="options__button">
          <i class="fa fa-plus" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script src="/static/conf.js"></script>
  <script src="/js/bootstrap.min.js"></script>
</html>