<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <link href="/css/bootstrap.min.css"  rel="stylesheet">
    <link href="/static/style.css" rel="stylesheet">
    <title> TwinSanity Detalles  </title>

  </head>
  <body>
    <div class="header">
      <div class="logo">
        <div class="header__back">
          <i class="fas fa-angle-left"></i>
        </div>
        <%- include("template/navbar") %>  
      </div>
    </div>  
    <div class="main">  
    <div class="main__left">
      <div class="Foro">
          <H1> Foro de Consultas</H1>
      </div>
      <div class="container">
        <% if (error) { %>
            <table class="table">
              <tbody>  
                    <td align="center"><%=mensaje %></td>
              </tbody>
            </table>
            <div class="d-grid gap-2 col-6 mx-auto">
                <a href="/" class="btn btn-primary"> Volver al inicio</a>
            </div>
        <%} else { %>
            <table class="table">
                <tbody>
                    <tr>
                        <th  class="table-primary text-center"  scope="col" rowspan="2">Autor  
                            <br>
                            <br>
                            <%=foro.autor %>
                        </th>
                        <th scope="col"><%=foro.titulo %></th>
                        
                      </tr>
                      <tr>
                        
                        <td><%=foro.descripcion %> </td>
                       
                      </tr>
                </tbody>  
            </table>

            <h2>Comentarios: </h2>
            <br>
            <% if (comentario.length > 0) { %>
                <% comentario.forEach(comentario => { %>
                <table class="table">
                    <tbody>
                        <tr>
                            <th  class="table-success text-center"  scope="col" rowspan="2" >Usuario  
                                <br>
                                <br>
                                <%=comentario.autor%>
                            </th>
                        
                        </tr>
                        <tr>
                            <td><%=comentario.comentario %> </td>
                        </tr>
                    </tbody>
                    <% }) %>
                <%} else { %>
                    <table class="table">
                        <tbody>
                            <td align="center">Aun no hay Comentarios.</td>
                        </tbody>
                    </table>
                <% } %>
            </table>
            <div class="d-grid gap-2 col-6 mx-auto">
                <button
                    class="btn btn-primary"
                    type="submit"
                    id="crearf"
                  >
                    Crear un Nuevo Comentario
                  </button>
              </div>
              <div class="crearforo" id="crearforo1">
                <h3 align="center">Crear Comentario</h3>
                <form action="/foro/<%=foro._id%>" method="POST">
                  <div class="d-grid gap-2 col-6 mx-auto">
        
                  <input
                   type="text"
                   placeholder="creador..."
                   class="form-control my-2"
                   name="autor"
                   <!--readonly--> 
                  
                   <input
                   type="text"
                   placeholder="Foro"
                   class="form-control my-2"
                   name="id2"
                   value=<%=foro._id%>
                   readonly>
                  <!--<input
                  type="date"
                  placeholder="fecha..."
                  class="form-control my-2"
                  name="fecha"
                  value= "<%=Date.now() %> "
                 >--> 
                  <textarea
                    placeholder="Comentario...."
                    class="form-control my-2"
                    rows="3"
                    name="comentario"
                  ></textarea>
                
                    <button
                      class="btn btn-primary"
                      type="submit"
                    >
                      Agregar Comentario
                    </button>
                </div>
                
                </button>
                </form>
              </div>
        <% } %>
 
      </div>
  

     </div>
    <div class="main__right">
      <div class="main__chat_window">
          <div class="messages">

          </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Chat en vivo :D...">
        <div id="send" class="options__button">
          <i class="fa fa-plus" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script src="/static/conf.js"></script>
  <script src="/js/bootstrap.min.js"></script>
</html>